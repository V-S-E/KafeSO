<Window x:Class="Kafe.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kafe"
        mc:Ignorable="d"
        Title="Настройки подключения" Height="450" Width="800" Loaded="Load" Closed="Close">
    <Grid>
        <Grid MinWidth="300" Margin="200, 0, 200, 0" VerticalAlignment="Center">
                <StackPanel>
                    <DockPanel/>
                <DockPanel>
                        <Label Content="База кафе" VerticalAlignment="Center"></Label>
                        <TextBox Name="StringDBK" Margin="0,30,0,30"></TextBox>
                    </DockPanel>
                <Button Content="Подключить" Name="ConnectB" Click="Click_Connect"></Button>
                </StackPanel>
            </Grid>
        </Grid>
</Window>